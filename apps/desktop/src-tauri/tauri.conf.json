{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AGI Workforce",
  "version": "5.0.0",
  "identifier": "com.agiworkforce.desktop",
  "build": {
    "beforeDevCommand": "pnpm run dev:vite",
    "beforeBuildCommand": "pnpm run build:web",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AGI Workforce",
        "width": 1920,
        "height": 1040,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false,
        "shadow": true,
        "visible": true,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; media-src 'self' data: blob:; connect-src 'self' ws: wss: http: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'wasm-unsafe-eval'"
    }
  }
}